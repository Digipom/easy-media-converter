<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>

        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="android:fontFamily">@string/sans_serif_condensed</item>

        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

        <item name="alertDialogTheme">@style/AppTheme.MaterialAlertDialog</item>
    </style>

    <style name="AppTheme.FAB" parent="ThemeOverlay.MaterialComponents">
        <item name="colorOnSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents" />

    <style name="AppTheme.Picker" parent="Theme.MaterialComponents">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TopToolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.BottomAppBar" parent="ThemeOverlay.MaterialComponents.BottomAppBar.Primary">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:drawableTint">@android:color/white</item>
        <item name="tint">@android:color/white</item>
    </style>

    <style name="RecentsCardHeaderTextStyle">
        <item name="android:drawableTint">@color/cardHeaderTextColor</item>
        <item name="android:textColor">@color/cardHeaderTextColor</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="RecentsCardTitleTextStyle">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6
        </item>
    </style>

    <style name="EditActionButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:gravity">start|center_vertical</item>
        <item name="iconPadding">32dp</item>
        <item name="iconTint">@color/editActionTextColor</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/editActionTextColor</item>
    </style>

    <style name="SelectableChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipCornerRadius">4dp</item>
        <item name="chipStrokeColor">?attr/colorSecondary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/SelectableChipTextAppearance</item>
    </style>

    <style name="SelectableChipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@string/sans_serif_condensed</item>
    </style>

    <style name="AppTheme.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:fontFamily">@string/sans_serif_condensed</item>
        <item name="buttonBarPositiveButtonStyle">
            @style/AppTheme.MaterialAlertDialog.PositiveButton
        </item>
        <item name="buttonBarNegativeButtonStyle">
            @style/AppTheme.MaterialAlertDialog.NegativeButton
        </item>
        <item name="buttonBarNeutralButtonStyle">@style/AppTheme.MaterialAlertDialog.NeutralButton
        </item>
    </style>

    <style name="AppTheme.MaterialAlertDialog.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.MaterialAlertDialog.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="AppTheme.MaterialAlertDialog.NeutralButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="BottomSheetItemTextAppearance">
        <item name="android:fontFamily">@string/sans_serif_condensed</item>
    </style>
</resources>
